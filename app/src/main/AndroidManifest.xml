<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dipendra.paygetping">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".login.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".login.RegisterActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".WalletsActivity"
            android:label="@string/title_activity_wallets"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".FriendsActivity"
            android:label="@string/title_activity_friend"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddFriendsActivity"
            android:label="@string/title_activity_add_friends"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddUserToList"
            android:label="@string/title_activity_add_user_to_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SelectFriendActivity"
            android:label="@string/title_activity_search_friend"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>